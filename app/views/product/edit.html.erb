<body>
    <div class="container-fluid">
      <div class="row">
        <nav class="col-md-2 d-none d-md-block bg-light sidebar">
          <div class="sidebar-sticky">
            <ul class="nav flex-column">
              <li class="nav-item">
                <%= link_to 'Dashboard', "/dashboard/index" %>
              </li>
              <li class="nav-item">
                <%= link_to 'Orders', "/order/index" %>
              </li>
              <li class="nav-item">
                <%= link_to 'Products', "/product/index" %>
              </li>
              <li class="nav-item">
                <%= link_to 'Seller Panel', "/seller/index" %>
              </li>
            </ul>

          </div>
        </nav>

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
          <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Product Edit</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
              <div class="btn-group mr-2">
                
              </div>
            </div>
          </div>

          <!--- create form for product and send the form to the new action --->
          <%= form_for @product do |f| %>

				  <div class="form-row">
				  		
				    <div class="form-group col-md-6">
				      <label for="inputEmail4">Product Name</label>
				      <%= f.text_field :Name %>
				    </div>
				    <div class="form-group col-md-6">
				      <label for="inputPassword4">Product Description</label>
				      <%= f.text_field :Description %>
				    </div>

				  </div>
				  <div class="form-row">
					  <div class="form-group col-md-6">
					  	<label >Quantity</label>
					    <%= f.number_field :Quantity, :class => 'text_field' %>
					      
					  </div>

						<div class="form-group col-md-6">
					  	<label>Price</label>
					    <%= f.number_field :Price, class: :text_field, step: :any %>
					      
					  </div>
					  
				</div>
				  
				  <%= f.submit %>
			<% end %>		


          <canvas class="my-4 w-100" id="myChart" width="900" height="380"></canvas>

        </main>
      </div>
    </div>

  </body>

