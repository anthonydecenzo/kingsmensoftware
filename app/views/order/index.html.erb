<body>
    <div class="container-fluid">
      <div class="row">
        <nav class="col-md-2 d-none d-md-block bg-light sidebar">
          <div class="sidebar-sticky">
            <ul class="nav flex-column">
              <li class="nav-item">
                <%= link_to 'Dashboard', "/dashboard/index" %>
              </li>
              <li class="nav-item">
                <%= link_to 'Orders', "/order/index" %>
              </li>
              <li class="nav-item">
                <%= link_to 'Products', "/product/index" %>
              </li>
              <li class="nav-item">
                <%= link_to 'Seller Panel', "/seller/index" %>
              </li>
            </ul>

          </div>
        </nav>

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
          <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Product Overview</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
              <div class="btn-group mr-2">
                
              </div>


            </div>
          </div>




<div class="album py-5 bg-light">


        <div class="container">

          <div class="row">
          		
            <div class="col-md-6">
 		<% @orders.each do |f| %>
              <div class="card mb-6 box-shadow">
                
                 
				  <div class="form-row">
				  		
				    <div class="form-group col-md-6">
				      <label for="inputEmail4">Seller</label>
				      <b><%= f.SellerId %></b>
				    </div>
				    <div class="form-group col-md-6">
				      <b><%= link_to 'View Product', product_path(Product.find(f.ProductId)) %></b>
				    </div>

				  </div>

				  <div class="form-row">
					  <div class="form-group col-md-6">
					  	<label >Quantity</label>
					    <b><%= f.Quantity%></b>
					      
					  </div>

						<div class="form-group col-md-6">
					  	<label>Price</label>
					     <b><%= Product.find(f.ProductId).Price %></b>
					      
					  </div>
					  
				   </div>

                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                    
                    </div>
                  </div>



                </div>

                 <% end %>
              </div>


            </div>


          </div>
        </div>
          <canvas class="my-4 w-100" id="myChart" width="900" height="380"></canvas>

        </main>
      </div>
    </div>

  </body>

